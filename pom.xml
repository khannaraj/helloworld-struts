<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.brijinc</groupId>
	<artifactId>struts-helloworld</artifactId>
	<version>1.0.0</version>
	<packaging>war</packaging>

	<name>HelloWorldStruts2</name>
	<description>Simple Hello world example can be used in Jenkins and in Openshift examples</description>

    <properties>
        <struts2.version>2.5.12</struts2.version>
        <log4j2.version>2.8.2</log4j2.version>
    </properties>

	<dependencies>

		<dependency>
			<groupId>org.apache.struts</groupId>
			<artifactId>struts2-core</artifactId>
			<version>${struts2.version}</version>
		</dependency>

		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>${log4j2.version}</version>
		</dependency>

	</dependencies>

	<build>
		<finalName>Hello Struts2 World</finalName>
		<plugins>
		</plugins>
	</build>
</project>
